# URL Devnet
NEXT_PUBLIC_DEVNET_PROVIDER_URL=http://127.0.0.1:5050

# URL Sepolia
NEXT_PUBLIC_SEPOLIA_PROVIDER_URL=https://starknet-sepolia.blastapi.io/64168c77-3fa5-4e1e-9fe4-41675d212522/rpc/v0_9

# URL Mainnet
NEXT_PUBLIC_MAINNET_PROVIDER_URL=https://starknet-mainnet.blastapi.io/64168c77-3fa5-4e1e-9fe4-41675d212522/rpc/v0_9

# =============================================================================
# Lightning Network Configuration
# =============================================================================

# Chipi Pay Lightning Payment Processor
# Get your API keys from: https://chipipay.com/developers
NEXT_PUBLIC_CHIPI_PAY_API_KEY=
CHIPI_PAY_WEBHOOK_SECRET=

# Atomiq Bridge Service  
# No API key required - Atomiq uses open bridge protocol
# Configure at: https://atomiq.network

# Application Base URL (for webhooks and callbacks)
# Development: http://localhost:3000
# Production: https://your-domain.com
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Lightning Network (bitcoin | testnet)
LIGHTNING_NETWORK=bitcoin

# Enable Lightning debug mode (shows detailed logs)
DEBUG_LIGHTNING=true

# Mock mode (use mock responses instead of real APIs)
# Set to 'false' when you have real API keys
LIGHTNING_MOCK_MODE=true

# Webhook development tunnel (for local testing with external webhooks)
# Example: https://your-tunnel.ngrok.io
WEBHOOK_TUNNEL_URL=

# Payment limits (in USD)
PAYMENT_MIN_AMOUNT=1
PAYMENT_MAX_AMOUNT=10000
